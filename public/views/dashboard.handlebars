<div class="container mt-5">
    <!-- Blog Posts -->
    <div class="row">
        <!-- Blog Post 1 -->
        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header">
                    Written by User1
                </div>
                <div class="card-body">
                    <h5 class="card-title">Blog Post Title 1</h5>
                    <p class="card-text">Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nulla at justo auctor, malesuada tellus in, malesuada massa.</p>
                    <!-- Comments Section -->
                    <div class="comments">
                        <!-- Comment 1 -->
                        <div class="comment mb-2">
                            <strong>UserA:</strong> Comment 1
                            <!-- Delete Comment Button (visible to the comment owner) -->
                            <button class="btn btn-danger btn-sm float-right">Delete Comment</button>
                        </div>
                        <!-- Comment 2 -->
                        <div class="comment">
                            <strong>UserB:</strong> Comment 2
                            <!-- Delete Comment Button (visible to the comment owner) -->
                            <button class="btn btn-danger btn-sm float-right">Delete Comment</button>
                        </div>
                    </div>
                    <!-- Add Comment Form -->
                    <form class="mt-2">
                        <div class="form-group">
                            <label for="commentText">Add a Comment</label>
                            <input type="text" class="form-control" id="commentText" placeholder="Write a comment">
                        </div>
                        <button type="submit" class="btn btn-primary">Submit Comment</button>
                    </form>
                    <!-- Delete Post Button (visible to the post owner) -->
                    <button class="btn btn-danger mt-2">Delete Post</button>
                </div>
            </div>
        </div>

        <!-- Blog Post 2 -->
        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header">
                    Written by User2
                </div>
                <div class="card-body">
                    <h5 class="card-title">Blog Post Title 2</h5>
                    <p class="card-text">Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nulla at justo auctor, malesuada tellus in, malesuada massa.</p>
                    <!-- Comments Section -->
                    <div class="comments">
                        <!-- Comment 3 -->
                        <div class="comment mb-2">
                            <strong>UserC:</strong> Comment 3
                            <!-- Delete Comment Button (visible to the comment owner) -->
                            <button class="btn btn-danger btn-sm float-right">Delete Comment</button>
                        </div>
                    </div>
                    <!-- Add Comment Form -->
                    <form class="mt-2">
                        <div class="form-group">
                            <label for="commentText2">Add a Comment</label>
                            <input type="text" class="form-control" id="commentText2" placeholder="Write a comment">
                        </div>
                        <button type="submit" class="btn btn-primary">Submit Comment</button>
                    </form>
                    <!-- Delete Post Button (visible to the post owner) -->
                    <button class="btn btn-danger mt-2">Delete Post</button>
                </div>
            </div>
        </div>

        <!-- Add New Blog Post -->
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Add New Blog Post</h5>
                    <form>
                        <div class="form-group">
                            <label for="postTitle">Title</label>
                            <input type="text" class="form-control" id="postTitle" placeholder="Enter title">
                        </div>
                        <div class="form-group">
                            <label for="postContent">Content</label>
                            <textarea class="form-control" id="postContent" rows="3" placeholder="Enter content"></textarea>
                        </div>
                        <button type="submit" class="btn btn-success">Submit</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

